<div class="container">
  <div class="row">
      <h1>Books</h1>
  <table class="table">
    <tbody>
      <tr>
        <th>title</th>
        <th>opiion</th>
      </tr>
      <% books.each do |bk| %>
      <tr>
        <td><%= link_to user_path(bk.user_id) do %>
          <%= attachment_image_tag bk.user, :profile_image, fallback: "no_image.png", size:"30x30" %>
          <% end %>
        </td>
        <td><%= link_to bk.title, book_path(bk.id) %></td>
        <td><%= bk.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>


      
      
