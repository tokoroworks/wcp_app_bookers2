<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>User info</h1>
    <% if @user.errors.any? %>
      <%= @user.errors.count %> error prohibited this obj from being saved:
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @user, local:true do |f| %>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %>
    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.png", size: "100x100" %>
    <label for="inputImage">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction" %>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
    </div>
  </div>
</div>
